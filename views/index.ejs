<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login Page</title>
    </head>
    <body>
        <h1>Login Page</h1>
        <form id="login-form">

            <input type="email" id="email" placeholder="email" />
            <br />
            <br />
            <input type="password" id="password" placeholder="password" />

            <button id="login-button">Submit</button>
        </form>

        <p id="error-message" style="color:red;display: none;">Invalid email or password</p>

        <div id="submitCount"> </div>
    </body>

    <script>
        var count = 0;
        document.getElementById('login-form').addEventListener('submit', 
        function(event) {
            event.preventDefault();

            count ++;

           // document.getElementById('submitCount').innerHTML = `${count}`;
            document.getElementById('submitCount').textContent= count;

            if (count > 1){
                return new Error('You have submitted too many times');
            }

            const email = document.getElementById('email').value;

            const password = document.getElementById('password').value;

            if(email == "test@example.com" && password == "password123"){
                alert('Login Successful!')
            } else {
                document.getElementById('error-message').style.display = 'block';
            }
        });

        
    </script>    
</html>